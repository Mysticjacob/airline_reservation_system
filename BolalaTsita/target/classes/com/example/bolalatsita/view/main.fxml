<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bolalatsita.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuExitItem" mnemonicParsing="false" text="Exit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Data">
                    <items>
                        <MenuItem fx:id="menuFlightDetailsItem" mnemonicParsing="false" text="Flight Details" />
                        <MenuItem fx:id="menuFleetInfoItem" mnemonicParsing="false" text="Fleet Information" />
                        <MenuItem fx:id="menuFareDetailsItem" mnemonicParsing="false" text="Fare Details" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Reservation">
                    <items>
                        <MenuItem fx:id="menuNewReservationItem" mnemonicParsing="false" text="New Reservation" />
                        <MenuItem fx:id="menuCancelTicketItem" mnemonicParsing="false" text="Cancel Ticket" />
                        <MenuItem fx:id="menuShowTimingsItem" mnemonicParsing="false" text="Show Timings (Delhi to Gau)" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="menuAboutItem" mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Airline Reservation System" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <Label text="Welcome to our service!" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <!-- HBox for Statistics -->
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Label fx:id="availableAircraftLabel" text="Available Aircraft: ..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Fleet Status" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Label fx:id="totalFlightsLabel" text="Total Flights: ..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Scheduled Today" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Label fx:id="totalBookingsLabel" text="Total Bookings: ..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Confirmed" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER">
                            <children>
                                <Label fx:id="waitingListLabel" text="Waiting List: ..." textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Passengers" textAlignment="CENTER" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
