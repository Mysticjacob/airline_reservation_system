    <children>
        <AnchorPane prefHeight="200.0" prefWidth="800.0">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Travel Date:" />
                <TextField fx:id="resDateField" layoutX="100.0" layoutY="10.0" prefHeight="25.0" prefWidth="150.0" />
                <Label layoutX="14.0" layoutY="48.0" text="Source:" />
                <TextField fx:id="sourceField" layoutX="100.0" layoutY="44.0" prefHeight="25.0" prefWidth="150.0" />
                <Label layoutX="14.0" layoutY="82.0" text="Destination:" />
                <TextField fx:id="destinationField" layoutX="100.0" layoutY="78.0" prefHeight="25.0" prefWidth="150.0" />
                <Button fx:id="btnSearchFlights" layoutX="270.0" layoutY="44.0" mnemonicParsing="false" text="Search Flights" />
                <Label layoutX="450.0" layoutY="14.0" text="Class:" />
                <ComboBox fx:id="classComboBox" layoutX="500.0" layoutY="10.0" prefWidth="150.0" />
