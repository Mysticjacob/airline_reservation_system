                <ComboBox fx:id="seatTypeComboBox" layoutX="500.0" layoutY="44.0" prefWidth="150.0" />
                <Button fx:id="btnBookTicket" layoutX="670.0" layoutY="44.0" mnemonicParsing="false" text="Book Ticket" />
